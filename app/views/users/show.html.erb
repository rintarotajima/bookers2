
<div class="container">
  <div class="row">
     <%= render 'books/list', user: @user,book: @book_new %>
     <div class="col-md-8 offset-md-1">
       <h2>Books</h2>
       <table class="table table-hover table-inverse">
         <thead>
           <tr>
             <th></th>
             <th>Title</th>
             <th>Opinion</th>
             <th colspan="3"></th>
           </tr>
         </thead>
         <tbody>
           <% @books.each do |book| %>
             <tr>
               <td>
                 <% if book.user.profile_image.attached? %>
                   <%= link_to(image_tag(url_for(book.user.profile_image), class: "profile_image", width: 100, height: 100), user_path(book.user)) %>
                 <% else %>
                    <%= link_to(image_tag("default-image.jpg", class: "profile_image"), user_path(book.user)) %>
                 <% end %>
               </td>
               <td>
                 <%= link_to book.title, book_path(book) %>
               </td>
               <td>
                 <%= book.body %>
               </td>
                <td>
                </td>
             </tr>
           <% end %>
         </tbody>
       </table>
     </div>
  </div>
</div>