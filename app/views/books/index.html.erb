<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render 'books/list' %>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thread>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thread>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <% if @user.profile_image.attached? %>
                  <%= link_to(image_tag(url_for(book.user.profile_image), class: "profile_image"), user_path(book.user)) %>
                <% else %>
                  <%= link_to(image_tag("default-image.jpg", class: "profile_image"), user_path(book.user)) %>
                <% end %>
              </td>
              <td>
                <%= link_to book.title, book_path(book) %>
              </td>
              <td>
                <%= book.body %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>